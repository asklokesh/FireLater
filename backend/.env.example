# Server
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# Database
DATABASE_URL=postgresql://firelater:firelater_dev@localhost:5433/firelater_dev

# Database Connection Pool (optional - defaults shown)
# DB_POOL_MAX_CONNECTIONS=20
# DB_POOL_MIN_CONNECTIONS=5
# DB_POOL_IDLE_TIMEOUT=30000
# DB_POOL_CONNECTION_TIMEOUT=5000
# DB_QUERY_TIMEOUT=30000
# DB_STATEMENT_TIMEOUT=30000

# Database Performance Monitoring (optional)
# DB_SLOW_QUERY_THRESHOLD=100
# LOG_SLOW_QUERIES=false

# API Endpoint Performance Monitoring (optional)
# SLOW_ENDPOINT_THRESHOLD=500
# LOG_ENDPOINT_TIMINGS=false

# Redis
REDIS_URL=redis://localhost:6379

# JWT (minimum 32 characters for production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET=firelater-attachments
S3_REGION=us-east-1

# Email (optional)
SENDGRID_API_KEY=

# Slack (optional)
SLACK_WEBHOOK_URL=

# Logging
LOG_LEVEL=debug
